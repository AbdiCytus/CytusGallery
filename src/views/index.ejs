<%- include('partials/header') %>

<main class="container mx-auto p-4">
  <div class="my-8"></div>

  <div class="columns-2 md:columns-5 gap-4 space-y-4">
    <% posts.forEach((post, index) => { %> <%# Cek apakah large_file_url ada %>
    <% if (post.large_file_url) { %>
    <div class="break-inside-avoid bg-gray-800 rounded-md overflow-hidden">
      <a href="/posts/<%= post.id %>" class="block">
        <img
          src="<%= post.large_file_url %>"
          alt="Konten oleh: <%= post.tag_string_artist %>"
          class="w-full h-auto"
          loading="lazy"
        />
      </a>
    </div>
    <% } %> <% }); %>
  </div>
</main>

<%- include('partials/footer') %>
