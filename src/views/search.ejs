<%- include('partials/header') %>

<main class="container mx-auto p-4">
  <h2 class="text-2xl font-semibold text-center mb-8">
    Hasil Pencarian untuk: <span class="text-cyan-400"><%= tags %></span>
  </h2>

  <div class="columns-2 md:columns-5 gap-4 space-y-4">
    <% if (posts && posts.length > 0) { %> <% posts.forEach((post, index) => {
    %> <% if (post.large_file_url) { %>
    <div class="break-inside-avoid bg-gray-800 rounded-md overflow-hidden">
      <a href="/posts/<%= post.id %>" class="block">
        <img src="<%= post.large_file_url %>" alt="Konten oleh: <%= post.tag_string_artist %>" class="w-full h-auto" loading="lazy" />
      </a>
    </div>
    <% } %> <% }); %> <% } else { %>
    <p class="text-center text-gray-400 col-span-full">
      Tidak ada hasil yang ditemukan untuk tag "<%= tags %>".
    </p>
    <% } %>
  </div>
</main>

<%- include('partials/pagination', { currentPage, totalPages, limit, tags }) %>
<%- include('partials/footer') %>